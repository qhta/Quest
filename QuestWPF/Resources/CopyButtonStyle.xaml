<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:questRsx="clr-namespace:QuestRSX;assembly=QuestRSX">
  <Style TargetType="Button" x:Key="CopyButtonStyle">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="2"/>
    <Setter Property="Height" Value="24"/>
    <Setter Property="Width" Value="24"></Setter>
    <Setter Property="HorizontalAlignment" Value="Right"/>
    <Setter Property="VerticalAlignment" Value="Top"/>
    <Setter Property="Margin" Value="0"></Setter>
    <Setter Property="ToolTip" Value="{x:Static questRsx:Strings.CopyToClipboard}"/>
    <Setter Property="Content">
      <Setter.Value>
        <Image Source="pack://application:,,,/Assets/Copy.png" Stretch="Uniform"/>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>