<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:questImp="clr-namespace:QuestIMP;assembly=QuestIMP"
             xmlns:quest="clr-namespace:Quest;assembly=QuestENG"
             xmlns:views="clr-namespace:QuestWPF.Views"
             x:Class="QuestWPF.Views.ExcelView"
             d:DataContext="{d:DesignInstance questImp:WorkbookInfoVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <views:ImportControl/>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox 
        Text="{Binding ProjectTitle}"
        ItemsSource="{Binding Source={x:Static quest:ProjectsViewModel.Instance}, Path=Projects}"
        DisplayMemberPath="Title" 
        IsEditable="True"
        />
        <ProgressBar 
          Grid.Row="1"
          VerticalAlignment="Top"
          Height="5"
          Minimum="0"
          Maximum="{Binding WorksheetsCount}"
          Value="{Binding LoadedCount}"
          Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
          />
        <ListView 
          x:Name="WorksheetListView"
          Grid.Row="1"
          Margin="0,5,0,0"
          ItemsSource="{Binding Worksheets}" 
          HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch"
          SelectionChanged="WorksheetListView_OnSelectionChanged"
          >
          <ListView.View>
            <GridView>
              <GridViewColumn Header="Import"
                              Width="40">
                <GridViewColumn.CellTemplate>
                  <DataTemplate DataType="{x:Type questImp:WorksheetInfoVM}">
                    <CheckBox IsChecked="{Binding IsSelected}"
                              />
                  </DataTemplate>
                </GridViewColumn.CellTemplate>
              </GridViewColumn>
              <GridViewColumn Header="Worksheet" 
                              Width="80"
                              DisplayMemberBinding="{Binding Name}" />
              <GridViewColumn Header="Quest"
                              Width="80">
                <GridViewColumn.CellTemplate>
                  <DataTemplate DataType="{x:Type questImp:WorksheetInfoVM}">
                    <TextBlock Text="{Binding QuestRange}"
                        MouseLeftButtonDown="RangeTextBlock_OnMouseLeftButtonDown"/>
                  </DataTemplate>
                </GridViewColumn.CellTemplate>
              </GridViewColumn>
              <GridViewColumn Header="Weights"
                              Width="80">
                <GridViewColumn.CellTemplate>
                  <DataTemplate DataType="{x:Type questImp:WorksheetInfoVM}">
                    <TextBlock Text="{Binding WeightsRange}"
                           MouseLeftButtonDown="RangeTextBlock_OnMouseLeftButtonDown"/>
                  </DataTemplate>
                </GridViewColumn.CellTemplate>
              </GridViewColumn>
            </GridView>
          </ListView.View>
        </ListView>
      </Grid>
      <syncfusion:SfGridSplitter 
        Grid.Column="1" 
        HorizontalAlignment="Left"
        Background="Silver"
        Width="5"/>
      <Grid 
        Grid.Column="1"
        Margin="5,0,0,0">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--<syncfusion:SfSpreadsheetRibbon 
      Grid.Row="0"
      DataContext= "{Binding ElementName=spreadsheet}" 
      />-->
        <syncfusion:SfSpreadsheet 
      x:Name="SpreadsheetControl"
      ShowSheetTabs="False"
      FormulaBarVisibility="Collapsed"
      Grid.Row="1" />
      </Grid>
    </Grid>
  </Grid>
</UserControl>
