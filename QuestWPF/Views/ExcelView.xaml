<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quest.Views"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="Quest.Views.ExcelView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <syncfusion:SfSpreadsheetRibbon 
      Grid.Row="0"
      DataContext= "{Binding ElementName=spreadsheet}" 
      />
    <syncfusion:SfSpreadsheet 
      x:Name="SpreadsheetControl"
      Grid.Row="1" />
  </Grid>
</UserControl>
