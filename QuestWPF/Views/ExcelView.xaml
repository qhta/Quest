<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quest.Views"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="Quest.Views.ExcelView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <ListView 
      x:Name="WorksheetListView"
      ItemsSource="{Binding WorksheetInfoCollection}" 
      HorizontalAlignment="Stretch" 
      VerticalAlignment="Stretch"
      SelectionChanged="WorksheetListView_OnSelectionChanged"
      >
      <ListView.View>
        <GridView>
          <GridViewColumn Width="40">
            <GridViewColumn.CellTemplate>
              <DataTemplate>
                <CheckBox IsChecked="{Binding HasQuest, Mode=OneWay}" IsEnabled="False" />
              </DataTemplate>
            </GridViewColumn.CellTemplate>
          </GridViewColumn>
          <GridViewColumn Header="Worksheet" Width="200" DisplayMemberBinding="{Binding NameAndRange}" />

        </GridView>
      </ListView.View>
    </ListView>
    <Grid Grid.Column="1">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <!--<syncfusion:SfSpreadsheetRibbon 
      Grid.Row="0"
      DataContext= "{Binding ElementName=spreadsheet}" 
      />-->
      <syncfusion:SfSpreadsheet 
      x:Name="SpreadsheetControl"
      ShowSheetTabs="False"
      FormulaBarVisibility="Collapsed"
      Grid.Row="1" />
    </Grid>
  </Grid>
</UserControl>
