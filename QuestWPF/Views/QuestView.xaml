<UserControl xmlns:syncfusion="http://schemas.syncfusion.com/wpf"  x:Class="QuestWPF.Views.QuestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:QuestWPF.Views"
             xmlns:quest="clr-namespace:Quest;assembly=QuestENG"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance quest:ProjectQualityVM}"
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <views:ImportControl/>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox 
        Text="{Binding ProjectTitle}"
        ItemsSource="{Binding Source={x:Static quest:ProjectsViewModel.Instance}, Path=Projects}"
        DisplayMemberPath="Title" 
        IsEditable="True"
        />
        <ProgressBar 
          x:Name="ProgressBar"
          Grid.Row="1"
          VerticalAlignment="Top"
          Height="5"
          Minimum="0"
          Maximum="{Binding TotalCount}"
          Value="{Binding LoadedCount}"
          Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
          />
        <TreeView 
          x:Name="ModelTreeView"
          Grid.Row="1"
          Margin="0,5,0,0"
          ItemsSource="{Binding RootNode}" 
          HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch"
          >
        </TreeView>
      </Grid>
      <syncfusion:SfGridSplitter 
        Grid.Column="1" 
        HorizontalAlignment="Left"
        Background="Silver"
        Width="5"/>
      <Grid 
        Grid.Column="1"
        Margin="5,0,0,0">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--<syncfusion:SfSpreadsheetRibbon 
      Grid.Row="0"
      DataContext= "{Binding ElementName=spreadsheet}" 
      />-->
      </Grid>
    </Grid>
  </Grid>
</UserControl>
