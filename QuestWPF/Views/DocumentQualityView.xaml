<UserControl 
  x:Class="QuestWPF.Views.DocumentQualityView"
  xmlns:syncfusion="http://schemas.syncfusion.com/wpf"  
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:quest="clr-namespace:Quest;assembly=QuestENG"
  xmlns:questRsx="clr-namespace:QuestRSX;assembly=QuestRSX"
  mc:Ignorable="d" 
  d:DataContext="{d:DesignInstance quest:QuestItemViewModel}"
  d:DesignHeight="450" d:DesignWidth="810">
  <Grid 
    DataContext="{Binding Content}" 
    d:DataContext="{d:DesignInstance quest:DocumentQualityVM}">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Border Background="Azure">
      <TextBlock Text="{Binding Path=DocumentTitle}" FontWeight="Bold" Margin="5"/>
    </Border>
    <syncfusion:SfTreeGrid
      Grid.Row="1"
      ChildPropertyName = "Children"
      AutoExpandMode = "RootNodesExpanded"
      ItemsSource="{Binding Factors}"
      AutoGenerateColumns="False"
      ColumnSizer="AutoFillColumn">
      <syncfusion:SfTreeGrid.Columns>
        <syncfusion:TreeGridTextColumn
          HeaderText="{x:Static questRsx:Strings.Text}"
          MappingName="Text"
        />
        <syncfusion:TreeGridTextColumn
          HeaderText="{x:Static questRsx:Strings.Level}"
          MappingName="Level"
        />
        <syncfusion:TreeGridNumericColumn
          HeaderText="{x:Static questRsx:Strings.Weight}"
          MappingName="Weight"
          NullValue="0"
          NumberDecimalDigits="0"
        />
        <syncfusion:TreeGridTextColumn
          HeaderText="{x:Static questRsx:Strings.Value}"
          MappingName="Value"
        />
        <syncfusion:TreeGridTextColumn
          HeaderText="{x:Static questRsx:Strings.Comment}"
          MappingName="Comment"
        />
      </syncfusion:SfTreeGrid.Columns>
    </syncfusion:SfTreeGrid>
  </Grid>
</UserControl>
